@model IEnumerable<OderModel>
@{
    ViewData["Title"] = "Order Listed";
}
<h3>List Orders</h3>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Order Code</th>
            <th scope="col">Order UserName</th>
            <th scope="col">Order Date</th>
            <th scope="col">Order Status</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th>#</th>
                <th scope="row">@item.OderCode</th>
                <td>@item.UserName</td>
                <td>@item.CreateDate</td>

                <td>
                    @if (item.Status ==1)
                    {
                        <span class="text text-success">Đơn hàng mới</span>
                    }
                    else
                    {
                        <span class="text text-danger">Đơn hàng đã thành công</span>
                    }

                </td>
                <td>
                    <a asp-action="ViewOder" class="btn btn-warning btn-sm" asp-controller="Oder" asp-route-Id="@item.OderCode">View Order</a>
                    <a asp-action="Delete" class="btn btn-danger btn-sm confirmDeletion" asp-controller="Oder" asp-route-Id="@item.Id">Delete</a>

                </td>
            </tr>
        }



    </tbody>
</table>